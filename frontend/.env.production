# Configuración para el frontend React en Render
# Este archivo asegura que React se construya correctamente

# Variables de entorno para producción
REACT_APP_API_URL=https://dhl-api-backend-xxxx.onrender.com/api
REACT_APP_BACKEND_URL=https://dhl-api-backend-xxxx.onrender.com/api
REACT_APP_ENVIRONMENT=production
GENERATE_SOURCEMAP=false
CI=false

# Configuración de build optimizada
BUILD_PATH=build
PUBLIC_URL=/

# Configuración de Node.js
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=460

# Configuración de npm
NPM_CONFIG_PRODUCTION=false
NPM_CONFIG_FUND=false
NPM_CONFIG_AUDIT=false
